<%-include('../partials/head')%>
<style>
#search-btn {
  display: none;
}

body {
  background-color: #f5f9ff;
  font-family: 'Georgia', serif;
}

.form-container {
  background: linear-gradient(135deg, #ffffff, #eef4ff);
  padding: 2.5rem;
  border-radius: 2rem;
  box-shadow: 0 12px 30px rgba(10, 37, 64, 0.25);
  width: 350px;
  margin: 30px auto;
  border: 2px solid #1e40af;
  position: relative;
}

.form-container h2 {
  text-align: center;
  margin-bottom: 2rem;
  color: #0a2540;
  font-size: 2rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.form-container .input-group {
  position: relative;
  margin-bottom: 2rem;
}

.form-container .input-group input {
  width: 100%;
  padding: 14px 12px;
  border: 2px solid #1e40af;
  border-radius: 1rem;
  outline: none;
  font-size: 1rem;
  background: #f0f6ff;
  transition: border-color 0.3s, box-shadow 0.3s, background 0.3s;
}

.form-container .input-group input:focus {
  border-color: #0a2540;
  box-shadow: 0 0 10px rgba(30, 64, 175, 0.7);
  background: #ffffff;
}

.form-container .input-group label {
  position: absolute;
  top: 50%;
  left: 14px;
  transform: translateY(-50%);
  color: #64748b;
  font-size: 1rem;
  pointer-events: none;
  transition: all 0.3s ease;
  background: #f0f6ff;
  padding: 0 6px;
  border-radius: 0.25rem;
}

.form-container .input-group input:focus + label,
.form-container .input-group input:valid + label {
  top: -12px;
  font-size: 0.8rem;
  color: #0a2540;
  background: #ffffff;
}

.form-container button {
  width: 100%;
  padding: 14px;
  background: linear-gradient(135deg, #0a2540, #1e40af);
  color: #ffffff;
  border: none;
  border-radius: 1rem;
  font-size: 1.1rem;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
  text-transform: uppercase;
}

.form-container button:hover {
  background: linear-gradient(135deg, #1e40af, #0a2540);
  transform: scale(1.05);
}

#signup {
  text-align: center;
  margin-top: 1rem;
}

#signup a {
  color: #1e40af;
  text-decoration: none;
  font-size: 1rem;
  padding: 8px 16px;
  border-radius: 8px;
  transition: background-color 0.3s ease, transform 0.2s ease;
  display: inline-block;
}

#signup a:hover {
  background-color: #1e40af;
  color: #ffffff;
  transform: scale(1.05);
}

/* ðŸ“± Responsive */
@media (max-width: 768px) {
  .form-container {
    width: 70%;
    margin: 5.5%;
    padding: 2rem;
    box-shadow: 0 8px 20px rgba(10, 37, 64, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .form-container h2 {
    font-size: 1.5rem;
  }

  .form-container button {
    font-size: 1rem;
  }

  #signup a {
    font-size: 0.9rem;
  }
}
</style>
<%-include('../partials/nav')%>

<div class="mainDabba">


    <div class="form-container">
        <%if(!isLogedIn){%>
            <h2>Login</h2>
            <form action="/login" method="POST">
            <%-include('../partials/errorHandel')%>
                <div class="input-group">
                    <input type="email" id="email" name="email" required value="<%= oldInput.email?oldInput.email:''%>">
                    <label for="email">Email</label>
                </div>
                <div class="input-group">
                    <input type="password" id="password" name="password" required />
                    <label for="password">Password</label>
                </div>
                <button type="submit">LogIn</button>
            </form>
            <h4 id="signup">
                <a href="/signUP"><b>New User</b></a>
            </h4>
        <%}else{%>
            <h2 style="text-align: center; margin-top: 50px; color: #232ec3;font-size: 1.8rem; text-transform: uppercase; letter-spacing: 1px;">
                You want to log out!
            </h2>
            <div style="text-align: center; margin-top: 20px;">
                <a href="<%= user.userType === 'guest' ? '/' : '/vender/venders_list' %>" 
                    style="display: inline-block; background: linear-gradient(135deg, #0a2540a3, #1e40af93); color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-size: 1rem; text-transform: uppercase; transition: background 0.3s ease, transform 0.2s ease;">
                    No! Go back to vender
                </a>
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <form action="/logout" method="post">
                    <input type="submit" value="LogOut" 
                        style="background: linear-gradient(135deg, #0a2540a3, #1e40af93); color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer; font-size: 1rem; text-transform: uppercase; transition: background 0.3s ease, transform 0.2s ease;">
                </form>
            </div>
        <%}%>
    </div>
</div>
  <%-include('../partials/loading')%>
</body>
</html>
